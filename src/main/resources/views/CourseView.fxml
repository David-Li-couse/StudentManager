<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="courseView" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.school.studentms.controller.CourseController">

    <!-- 背景图片层（自适应全屏） -->
    <Pane style="-fx-background-image: url('/images/Course-bg.png');
                 -fx-background-size: cover;
                 -fx-background-position: center;
                 -fx-background-repeat: no-repeat;"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>



    <!-- 主内容容器（居中显示，有最大宽度限制） -->
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
          maxWidth="1400">

        <!-- 标题栏 -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="课程管理"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;fx-cursor: hand;" />
            <Button text="返回学生管理" onAction="#handleBackToStudent" stylesheets="@styles.css"
                    styleClass="back-button"/>
        </HBox>
        <Separator style="-fx-background-color: #cccccc;" />

        <!-- 主要内容区域 -->
        <VBox spacing="15" VBox.vgrow="ALWAYS">

            <!-- 课程管理卡片 -->
            <VBox spacing="10"
                  style="-fx-background-color: rgba(255, 255, 255, 0.95);
                         -fx-background-radius: 8;
                         -fx-border-radius: 8;
                         -fx-border-color: #dddddd;
                         -fx-border-width: 1;
                         -fx-padding: 15;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="课程管理"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                    <Button text="刷新课程" onAction="#handleRefreshCourses" stylesheets="@styles.css"
                            styleClass="refresh-button"/>
                </HBox>

                <!-- 搜索栏 -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0;">
                    <TextField fx:id="courseSearchField" promptText="按课程代码或名称搜索..."
                               prefWidth="300" style="-fx-background-radius: 4;"/>
                    <Button text="搜索" onAction="#handleCourseSearch" stylesheets="@styles.css"
                            styleClass="search-button"/>
                    <Button text="清空" onAction="#clearCourseSearch" stylesheets="@styles.css"
                            styleClass="clear-button"/>
                </HBox>

                <!-- 课程表格 -->
                <TableView fx:id="courseTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colCourseCode" text="课程代码" prefWidth="120" />
                        <TableColumn fx:id="colCourseName" text="课程名称" prefWidth="280" />
                    </columns>
                </TableView>

                <!-- 课程表单 -->
                <GridPane hgap="10" vgap="10" style="-fx-padding: 15 0 10 0;">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" prefWidth="80" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="课程代码：" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333333;"/>
                    <TextField fx:id="courseCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               style="-fx-background-radius: 4;"/>

                    <Label text="课程名称：" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333333;"/>
                    <TextField fx:id="courseNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                               style="-fx-background-radius: 4;"/>
                </GridPane>

                <!-- 操作按钮 -->
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button text="新增课程" fx:id="addCourseButton" onAction="#handleAddCourse" stylesheets="@styles.css"
                            styleClass="add-button" />
                    <Button text="修改课程" fx:id="updateCourseButton" onAction="#handleUpdateCourse" stylesheets="@styles.css"
                            styleClass="update-button"/>
                    <Button text="删除课程" fx:id="deleteCourseButton" onAction="#handleDeleteCourse" stylesheets="@styles.css"
                            styleClass="delete-button" />
                </HBox>
            </VBox>

            <!-- 学生管理区域 -->
            <HBox spacing="20" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">

                <!-- 所有学生卡片 -->
                <VBox spacing="10" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255, 255, 255, 0.95);
                             -fx-background-radius: 8;
                             -fx-border-radius: 8;
                             -fx-border-color: #dddddd;
                             -fx-border-width: 1;
                             -fx-padding: 15;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="所有学生列表"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                        <Button text="刷新学生" onAction="#handleRefreshAllStudents" stylesheets="@styles.css"
                                styleClass="refresh-button"/>
                    </HBox>

                    <!-- 所有学生表格 -->
                    <TableView fx:id="allStudentsTable" prefHeight="250">
                        <columns>
                            <TableColumn fx:id="colAllStudentId" text="学号" prefWidth="100" />
                            <TableColumn fx:id="colAllStudentName" text="姓名" prefWidth="100" />
                            <TableColumn fx:id="colAllStudentGender" text="性别" prefWidth="70" />
                            <TableColumn fx:id="colAllStudentMajor" text="专业" prefWidth="150" />
                        </columns>
                    </TableView>

                    <!-- 分配按钮 -->
                    <Button text="分配学生到课程" fx:id="assignStudentButton" onAction="#handleAssignStudent" stylesheets="@styles.css"
                            styleClass="assign-button"
                            maxWidth="Infinity"/>
                </VBox>

                <!-- 课程学生管理卡片 -->
                <VBox spacing="10" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: rgba(255, 255, 255, 0.95);
                             -fx-background-radius: 8;
                             -fx-border-radius: 8;
                             -fx-border-color: #dddddd;
                             -fx-border-width: 1;
                             -fx-padding: 15;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="课程学生管理"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                        <Button text="刷新课程学生" onAction="#handleRefreshCourseStudents" stylesheets="@styles.css"
                                styleClass="refresh-button"/>
                    </HBox>

                    <!-- 课程学生表格 -->
                    <TableView fx:id="courseStudentsTable" prefHeight="250">
                        <columns>
                            <TableColumn fx:id="colCourseStudentId" text="学号" prefWidth="100" />
                            <TableColumn fx:id="colCourseStudentName" text="姓名" prefWidth="100" />
                            <TableColumn fx:id="colCourseStudentGender" text="性别" prefWidth="70" />
                            <TableColumn fx:id="colCourseStudentMajor" text="专业" prefWidth="150" />
                            <TableColumn fx:id="colCourseStudentScore" text="成绩" prefWidth="80" />
                        </columns>
                    </TableView>

                    <!-- 成绩管理 -->
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                        <Label text="成绩：" style="-fx-text-fill: #333333; -fx-font-weight: bold;"/>
                        <TextField fx:id="scoreField" prefWidth="100" promptText="0-100"
                                   style="-fx-background-radius: 4;"/>
                        <Button text="更新成绩" fx:id="updateScoreButton" onAction="#handleUpdateScore" stylesheets="@styles.css"
                                styleClass="update-button" />
                        <Button text="移除学生" fx:id="removeStudentButton" onAction="#handleRemoveStudent" stylesheets="@styles.css"
                                styleClass="delete-button" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>