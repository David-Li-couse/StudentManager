<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="majorClassView" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.school.studentms.controller.MajorClassController">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="专业班级管理" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button text="返回学生管理" onAction="#handleBackToStudent" style="-fx-font-size: 14px;"/>
        </HBox>
        <Separator />

        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- 专业管理部分 -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="专业管理" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <Button text="刷新专业" onAction="#handleRefreshMajors" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>

                <TableView fx:id="majorTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colMajorCode" text="专业代码" prefWidth="100" />
                        <TableColumn fx:id="colMajorName" text="专业名称" prefWidth="200" />
                    </columns>
                </TableView>

                <GridPane hgap="5" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="专业代码：" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="majorCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="专业名称：" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="majorNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="新增专业" fx:id="addMajorButton" onAction="#handleAddMajor" />
                    <Button text="修改专业" fx:id="updateMajorButton" onAction="#handleUpdateMajor" />
                    <Button text="删除专业" fx:id="deleteMajorButton" onAction="#handleDeleteMajor" />
                </HBox>
            </VBox>

            <!-- 班级管理部分 -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="班级管理" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <Button text="刷新班级" onAction="#handleRefreshClasses" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>

                <TableView fx:id="classTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colClassCode" text="班级代码" prefWidth="80" />
                        <TableColumn fx:id="colClassName" text="班级名称" prefWidth="150" />
                        <TableColumn fx:id="colClassMajor" text="所属专业" prefWidth="150" />
                    </columns>
                </TableView>

                <GridPane hgap="5" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="班级名称：" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="classNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="所属专业：" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <ComboBox fx:id="classMajorComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="新增班级" fx:id="addClassButton" onAction="#handleAddClass" />
                    <Button text="修改班级" fx:id="updateClassButton" onAction="#handleUpdateClass" />
                    <Button text="删除班级" fx:id="deleteClassButton" onAction="#handleDeleteClass" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>